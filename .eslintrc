{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "tsx": true,
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["import", "react-hooks"],
  "rules": {
    "no-console": "warn",
    "no-debugger": "error",
    "array-callback-return": "warn",
    "default-case": "error",
    "eqeqeq": "warn",
    "dot-location": "warn",
    "no-implicit-globals": "error",
    "require-await": "off",
    "camelcase": "warn",
    "block-spacing": "error",
    "no-trailing-spaces": "warn",
    "arrow-spacing": "error",
    "prefer-arrow-callback": "warn",
    "prefer-const": "error"
  }
}
